@model BearcatExpress.Models.Offer

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Offer</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ExpiryDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OfferName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OfferName" class="form-control" />
                <span asp-validation-for="OfferName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PriceReduced" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PriceReduced" class="form-control" />
                <span asp-validation-for="PriceReduced" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
