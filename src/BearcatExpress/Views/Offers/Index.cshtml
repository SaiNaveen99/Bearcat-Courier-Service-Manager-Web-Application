@model IEnumerable<BearcatExpress.Models.Offer>

@{
    ViewData["Title"] = "Index";
}

<h2>Offer Details</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceReduced)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfferName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceReduced)
        </td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.OfferID">Edit</a> 
            <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.OfferID">Details</a> 
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.OfferID">Delete</a>
        </td>
    </tr>
}
</table>
